{
    "name": "Tippin.me",
    "version": "0.1.7.1",
    "description": "Send Lightning Network tips to Twitter users!",
    "manifest_version": 2,
    "icons": { 
      "16": "icon-16.png",
      "32": "icon-32.png",
      "64": "icon.png",
      "128": "icon-128.png" },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
          "16": "icon-16.png",
          "32": "icon-32.png",
          "64": "icon.png",
          "128": "icon-128.png"
        }    
    },
    "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'",
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "js": ["jquery.js", "contentScript.js"],
        "css": ["style.css"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "https://twitter.com/*",
      "https://api.tippin.me/*",
      "storage"
      ],
    "web_accessible_resources": [
      "images/*.png"
    ]
}